<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.santrenkoding.sekolahku.MainActivity">

<android.support.v7.widget.CardView
android:id="@+id/cv_point_siswa"
android:onClick="searchPoint"
app:cardCornerRadius="20dp"
android:layout_marginTop="190dp"
android:layout_width="220dp"
android:layout_height="wrap_content"
android:layout_gravity="center">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageview_presensi"
        android:src="@drawable/ic_action_name"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:text="Job Desk"
        android:layout_toRightOf="@id/imageview_presensi"
        android:paddingRight="20dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_point_a"
        android:onClick="searchPoint"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageview_presensi2"
                android:src="@drawable/ic_action_person"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:text="Profile"
                android:layout_toRightOf="@id/imageview_presensi2"
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>


